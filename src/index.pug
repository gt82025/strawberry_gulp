extends _layout
block page_title
  title 首頁
block style
  link(type="text/css" , rel="stylesheet", href="css/vendor/swiper/swiper.css")
  link(type="text/css" , rel="stylesheet", href="css/index.min.css")
block script
  script(type="text/javascript" src="js/vendor/swiper/swiper.min.js")
  script(type="text/javascript" src="js/index.min.js")
  script(type="text/javascript").
    $(document).ready(function () {
    });
block content
  mixin pro_slider (prename,bg)
    .swiper-slide
      .pr_left
        .product_article
          h1.pro_name=prename
            img(src="images/sale.png", alt="")
          h2.subtitle ( 2盒裝 ) 20顆/盒
          .pricebox
            p.price.cost 原價 $400
            p.price.offer  會員價 <span>$300</span>
          p.describe.title 商品描述：
          p.describe.word 安全等級：無農藥、無生長激素(產銷履歷)<br>小型果香氣依然濃郁，分毫不減，出貨以訂單時間排序，出貨當日會以E-mail通知，要記得收信喔。
          .addcar
            .amount
              select(name="")
                option(value="") 1
                option(value="") 2
                option(value="") 3
              i.selectarrow.be-icon.be-icon-next
            a(href="").interchangeable_button
              i.intericon.be-icon.be-icon-cart
              .intername 加入購物車
      .pr_right
        .primg(style=bg)
  mixin news_slider (sortname)
    a(href="").swiper-slide
      .slidercenter
        //照片尺寸為w500px x h600px
        .newsimg
          img(src="images/index/proimg1.jpg", alt="")
          .coverbox
          i.addicon.be-icon.be-icon-hovericon
        h6.sortname=sortname
        h6.newstext 草菓農場幸運大轉盤 好康歡樂送！幸運輪盤轉轉樂！草菓農場幸運大轉盤 好康歡樂送！幸運輪盤轉轉樂！
        h6.newstime 2019-07-01

  section.banner
    .banner_img.img2(data-click="click2") 2
    .banner_img.img3(data-click="click3") 3
    .banner_img.img4(data-click="click4") 4
    .banner_img.img5(data-click="click5") 5
    .banner_img.img1(data-click="click1").click 1

    .prevarrow.img2(data-click="click2"): .prevbox: h6 01
    .prevarrow.img3(data-click="click3"): .prevbox: h6 02
    .prevarrow.img4(data-click="click4"): .prevbox: h6 03
    .prevarrow.img5(data-click="click5"): .prevbox: h6 04
    .prevarrow.img1(data-click="click1").click: .prevbox: h6 05

    .nextarrow.img5(data-click="click1"): .nextbox: h6 01
    .nextarrow.img1(data-click="click2").click: .nextbox: h6 02
    .nextarrow.img2(data-click="click3"): .nextbox: h6 03
    .nextarrow.img3(data-click="click4"): .nextbox: h6 04
    .nextarrow.img4(data-click="click5"): .nextbox: h6 05

    .banner_content
      h1.banner_title 無農藥揪安心。
      h4.banner_word 讓您買的安心，吃得安心，現在加入會員可享會員價喔，千萬別錯過...
      .linkbutton
        p 前往購買
        i.buttonicon.be-icon.be-icon-buttonarrow
    .sharebox
      h6 Share to
      a(href="").shareiconbox
        i.shareicon.be-icon.be-icon-fb
      a(href="").shareiconbox
        i.shareicon.be-icon.be-icon-line
      a(href="").shareiconbox
        i.shareicon.be-icon.be-icon-ig

  section.product_index
    .product_center
      .sort
        a.sorttab(data-product="product1").click: p.tabname 促銷商品
        a.sorttab(data-product="product2"): p.tabname 新鮮水果
        a.sorttab(data-product="product3"): p.tabname 夠青蔬菜
        a(href="product_list.html").sorttab: p.tabname +More
      .swiper-container.index-product-slider1(data-product="product1").click
        .swiper-wrapper
          // 商品照片尺存為w280px x h320px
          +pro_slider('小果草莓',"background-image:url(images/index/proimg2.jpg);")
          +pro_slider('中果草莓',"background-image:url(images/index/proimg2.jpg);")
          +pro_slider('大果草莓',"background-image:url(images/index/proimg2.jpg);")
      .swiper-container.index-product-slider2(data-product="product2")
        .swiper-wrapper
          // 商品照片尺存為w280px x h320px
          +pro_slider('小果草莓',"background-image:url(images/index/proimg1.jpg);")
          +pro_slider('中果草莓',"background-image:url(images/index/proimg1.jpg);")
          +pro_slider('大果草莓',"background-image:url(images/index/proimg1.jpg);")
      .swiper-container.index-product-slider3(data-product="product3")
        .swiper-wrapper
          // 商品照片尺存為w280px x h320px
          +pro_slider('小果草莓',"background-image:url(images/index/proimg3.jpg);")
          +pro_slider('中果草莓',"background-image:url(images/index/proimg3.jpg);")
          +pro_slider('大果草莓',"background-image:url(images/index/proimg3.jpg);")
      h4.producttext Popular Products
      .arrowarea.pro_arrow1(data-product="product1").click
        .arrow.next
          i.arrowicon.be-icon.be-icon-next
        .arrow.prev
          i.arrowicon.be-icon.be-icon-prev
      .arrowarea.pro_arrow2(data-product="product2")
        .arrow.next
          i.arrowicon.be-icon.be-icon-next
        .arrow.prev
          i.arrowicon.be-icon.be-icon-prev
      .arrowarea.pro_arrow3(data-product="product3")
        .arrow.next
          i.arrowicon.be-icon.be-icon-next
        .arrow.prev
          i.arrowicon.be-icon.be-icon-prev
  section.news_index
    .news_center
      .newscontent
        h3.newstitle 草菓提供豐富的有機蔬果新知、新訊，讓您天天享有好心情
        a(href="").morenews 
          .moreicon.be-icon.be-icon-buttonarrow
          h6.moretext 了解更多  Learn More
        .sort
          a(href="news_list.html").sorttab(data-news="news1").click: p.tabname 促銷商品
          a(href="news_list.html").sorttab(data-news="news2"): p.tabname 新鮮水果
      .newsslider.news_slider1(data-news="news1").click
        .swiper-container.news_slider
          .swiper-wrapper
            +news_slider('最新消息')
            +news_slider('最新消息')
            +news_slider('最新消息')
            +news_slider('最新消息')
            +news_slider('最新消息')
        .news_prevarrow: .prevbox: h6 PREV
        .news_nextarrow: .nextbox: h6 NEXT
      .newsslider.news_slider2(data-news="news2")
        .swiper-container.news_slider
          .swiper-wrapper
            +news_slider('媒體報導')
            +news_slider('媒體報導')
            +news_slider('媒體報導')
            +news_slider('媒體報導')
            +news_slider('媒體報導')
        .news_prevarrow: .prevbox: h6 PREV
        .news_nextarrow: .nextbox: h6 NEXT


    
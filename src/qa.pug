extends _layout
block page_title
  title 常見問題
block style
  link(type="text/css" , rel="stylesheet", href="css/vendor/swiper/swiper.css")
  link(type="text/css" , rel="stylesheet", href="css/service.min.css")
block script
  script(type="text/javascript" src="js/vendor/swiper/swiper.min.js")
  script(type="text/javascript").
    $(document).ready(function () {
      $(document).on('click', '.qalist', function() {
        if($(this).hasClass('click') == false){
          $('.qalist').removeClass('click');
          $(this).addClass('click');
        }else{
          $('.qalist').removeClass('click');
        }
      });
    });
block content
  mixin qabox (q_text, a_text)
    .qalist
      .qbox
        p.icon Q
        p.q_text=q_text
      .abox
        p.icon A
        p.a_text=a_text
              
  section.project_tab
    .project_center
      .swiper-container.gallery-thumbs
        .swiper-wrapper
          // 標籤分類文字不超過六個字
          a(href="how_buy.html").swiper-slide: p 如何購買
          a(href="pay_ship.html").swiper-slide: p 付款與配送
          a(href="return.html").swiper-slide: p 退換貨方式
